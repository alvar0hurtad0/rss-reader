{
	"name": "rss-reader",
	"displayName": "RSS-Reader",
	"description": "RSS feed widget",
	"version": "1.0.0",
	"publisher": "ekarbe",
	"author": "Eike Christian Karbe <eichkarbe@yahoo.de>",
	"license": "MIT",
	"engines": {
		"vscode": "^1.40.0"
	},
	"bugs": {
		"url": "https://github.com/ekarbe/rss-reader/issues",
		"email": "eichkarbe@yahoo.de"
	},
	"homepage": "https://ekarbe.github.io/rss-reader",
	"repository": {
		"type": "git",
		"url": "https://github.com/ekarbe/rss-reader.git"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"rss",
		"news",
		"browse",
		"feed",
		"widget"
	],
	"galleryBanner": {
		"color": "#EE8030",
		"theme": "dark"
	},
	"activationEvents": [
		"*"
	],
	"icon": "resources/rss-reader-icon.png",
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "RSSReader",
				"properties": {
					"RSSReader.Feeds": {
						"type": "array",
						"default": [
							{
								"title": "Google News",
								"url": "https://news.google.com/rss?hl=en-US&gl=US&ceid=US%3Aen&x=1571747254.2933"
							}
						],
						"description": "Controls the feeds for the RSS-Reader."
					},
					"RSSReader.Consolidated": {
						"type": "boolean",
						"default": true,
						"description": "Enable/disable consolidated mode."
					},
					"RSSReader.Update": {
						"type": "boolean",
						"default": true,
						"description": "Enable/disable auto update."
					},
					"RSSReader.Interval": {
						"type": "number",
						"default": 10,
						"description": "Controls the update interval in minutes."
					}
				}
			}
		],
		"commands": [
			{
				"command": "RSSReader.Open",
				"title": "Open links from RSS Reader"
			},
			{
				"command": "RSSReader.Refresh",
				"title": "Refresh the RSS feed",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "RSS",
					"title": "RSS-Reader",
					"icon": "resources/icons/treeView.svg"
				}
			]
		},
		"views": {
			"RSS": [
				{
					"id": "RSS-0",
					"name": "RSS-0",
					"when": "RSS-0-enabled"
				},
				{
					"id": "RSS-1",
					"name": "RSS-1",
					"when": "RSS-1-enabled"
				},
				{
					"id": "RSS-2",
					"name": "RSS-2",
					"when": "RSS-2-enabled"
				},
				{
					"id": "RSS-3",
					"name": "RSS-3",
					"when": "RSS-3-enabled"
				},
				{
					"id": "RSS-4",
					"name": "RSS-4",
					"when": "RSS-4-enabled"
				},
				{
					"id": "RSS-5",
					"name": "RSS-5",
					"when": "RSS-5-enabled"
				},
				{
					"id": "RSS-6",
					"name": "RSS-6",
					"when": "RSS-6-enabled"
				},
				{
					"id": "RSS-7",
					"name": "RSS-7",
					"when": "RSS-7-enabled"
				},
				{
					"id": "RSS-8",
					"name": "RSS-8",
					"when": "RSS-8-enabled"
				},
				{
					"id": "RSS-9",
					"name": "RSS-9",
					"when": "RSS-9-enabled"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "RSSReader.Refresh",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "typedoc && webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"doc": "typedoc"
	},
	"devDependencies": {
		"@types/he": "^1.1.0",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"ts-loader": "^6.2.1",
		"tslint": "^5.12.1",
		"typescript": "^3.7.2",
		"vscode": "^1.1.28",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {
		"fast-xml-parser": "^3.15.0",
		"he": "^1.2.0",
		"typed-rest-client": "^1.5.0"
	}
}
